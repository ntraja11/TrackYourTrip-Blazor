@page "/about"

@inject IWebHostEnvironment _Environment

<div class="card shadow border-0 mt-4">    
    <_CardHeader HeaderText="@($"About TrackYourTrip! {(_Environment.IsDevelopment() ? "(Dev)" : "")}")"></_CardHeader>

    <div class="card-body py-4">
        <!-- About Section -->
        <div class="row pb-4">
            <div class="col-12 text-center">
                <p class="lead">
                    TrackYourTrip is a Blazor-based web application developed to streamline travel planning and demonstrate my proficiency in modern web technologies.
                </p>
                <p class="text-muted">
                    This project is a showcase of my skills in .NET Core, Entity Framework Core, Azure Services, and more, aimed at creating a robust and scalable web app.
                </p>
            </div>
        </div>

        <!-- Technology Stack Section -->
        <div class="row py-3">
            <div class="col-12 text-center">
                <div class="feature-title mb-4">
                    <h2 class="text-primary fw-bold">
                        <i class="bi bi-tools"></i> Technology Stack <i class="bi bi-tools"></i>
                    </h2>
                    <p class="text-muted fs-5">
                        Built with cutting-edge technologies to demonstrate full-stack development expertise.
                    </p>
                </div>
            </div>
        </div>
        <div class="row about-page-row text-center">
            <!-- Frontend -->
            <div class="col-md-3 col-sm-6 py-2">
                <div class="feature-box about-feature-box p-3 border rounded bg-light">
                    <i class="bi bi-display display-5 text-primary"></i>
                    <h5 class="mt-3">Frontend</h5>
                    <ul class="text-muted text-start">
                        <li>Blazor Interactive (Server-Side)</li>
                        <li>HTML & CSS</li>
                        <li>Bootstrap for responsive design</li>
                        <li>Toastr for real-time notifications</li>
                    </ul>

                </div>
            </div>
            <!-- Backend -->
            <div class="col-md-3 col-sm-6 py-2">
                <div class="feature-box about-feature-box p-3 border rounded bg-light">
                    <i class="bi bi-server display-5 text-success"></i>
                    <h5 class="mt-3">Backend</h5>
                    <ul class="text-muted text-start">
                        <li>.NET Core (Cross-Platform Framework)</li>
                        <li>ASP.NET Core (Web Framework for APIs and Hosting)</li>
                        <li>Entity Framework Core</li>
                    </ul>

                </div>
            </div>
            <!-- Database -->
            <div class="col-md-3 col-sm-6 py-2">
                <div class="feature-box about-feature-box p-3 border rounded bg-light">
                    <i class="bi bi-database display-5 text-warning"></i>
                    <h5 class="mt-3">Database</h5>
                    <ul class="text-muted text-start">
                        <li>Microsoft SQL Server (Relational Database Management)</li>
                        <li>Azure SQL Database (Cloud-Based, Fully Managed)</li>
                    </ul>

                </div>
            </div>
            <!-- Cloud & DevOps -->
            <div class="col-md-3 col-sm-6 py-2">
                <div class="feature-box about-feature-box p-3 border rounded bg-light">
                    <i class="bi bi-cloud-arrow-up display-5 text-danger"></i>
                    <h5 class="mt-3">Azure Services Integration</h5>
                    <ul class="text-muted text-start">
                        <li>Azure App Service</li>
                        <li>Azure SQL Database</li>
                        <li>Azure DevOps</li>
                        <ul>
                            <li>Repos</li>
                            <li>Pipelines</li>
                            <li>Release Pipeline (CI/CD Workflow)</li>
                        </ul>
                    </ul>


                </div>
            </div>
        </div>

        <!-- Skill Showcase Section -->
        <div class="row mt-5">
            <div class="col-12 text-center">
                <h3 class="text-primary fw-bold">
                    <i class="bi bi-lightbulb"></i> Skills Demonstrated
                </h3>
                <p class="text-muted fs-5">
                    This app highlights my expertise in cloud technologies, full-stack development, and scalable architecture.
                </p>
            </div>
        </div>

        <!-- Call to Action Section -->
        <div class="row mt-5">
            <div class="col-12 text-center">
                <a href="/trip/" class="btn btn-lg btn-primary" style="width:250px;">
                    <i class="bi bi-arrow-right-circle"></i> Get Started
                </a>
            </div>
        </div>

    </div>
</div>


