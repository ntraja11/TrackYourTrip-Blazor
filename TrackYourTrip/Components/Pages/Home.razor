@page "/"


@inject IWebHostEnvironment _Environment



<div class="card shadow border-0 mt-4">
    <_CardHeader HeaderText="@($"Welcome to TrackYourTrip! {(_Environment.IsDevelopment() ? "(Dev)" : "")}")"></_CardHeader>
        
    <div class="card-body py-4">
        <!-- Description Section -->
        <div class="row pb-4">
            <div class="col-12 text-center">
                <p class="lead">
                    Your ultimate travel companion designed to make trip planning effortless. From managing participants to tracking expenses, we've got you covered!
                </p>
            </div>
        </div>
        <!-- Features Section -->
        <div class="row py-3">
            <div class="col-12 text-center">
                <div class="feature-title mb-4">
                    <h2 class="text-primary fw-bold">
                        <i class="bi bi-stars"></i> Key Features <i class="bi bi-stars"></i>
                    </h2>
                    <p class="text-muted fs-5">
                        Explore what makes Track Your Trip the perfect travel companion.
                    </p>
                </div>
            </div>
        </div>
        <div class="row text-center">
            <!-- Feature 1 -->
            <div class="col-md-3 col-sm-6 py-2">
                <div class="feature-box p-3 border rounded bg-light">
                    <i class="bi bi-calendar-check display-5 text-primary"></i>
                    <h5 class="mt-3">Easy Trip Management</h5>
                    <p class="text-muted">Effortlessly create and manage trips, tracking all important details in one place.</p>
                </div>
            </div>
            <!-- Feature 2 -->
            <div class="col-md-3 col-sm-6 py-2">
                <div class="feature-box p-3 border rounded bg-light">
                    <i class="bi bi-currency-dollar display-5 text-success"></i>
                    <h5 class="mt-3">Expense Tracking</h5>
                    <p class="text-muted">Log and keep track of all expenses for better financial organization.</p>
                </div>
            </div>
            <!-- Feature 3 -->
            <div class="col-md-3 col-sm-6 py-2">
                <div class="feature-box p-3 border rounded bg-light">
                    <i class="bi bi-people-fill display-5 text-warning"></i>
                    <h5 class="mt-3">Participant Collaboration</h5>
                    <p class="text-muted">Easily add and manage participants for a seamless group travel experience.</p>
                </div>
            </div>
            <!-- Feature 4 -->
            <div class="col-md-3 col-sm-6 py-2">
                <div class="feature-box p-3 border rounded bg-light">
                    <i class="bi bi-bar-chart display-5 text-danger"></i>
                    <h5 class="mt-3">Effortless Summaries</h5>
                    <p class="text-muted">Get detailed insights into expenses and trip summaries at a glance.</p>
                </div>
            </div>
        </div>
        <!-- Call to Action Section -->
        <div class="row mt-5">
            <div class="col-12 text-center">
                <a href="/trip/" class="btn btn-lg btn-primary" style="width:250px;">
                    <i class="bi bi-arrow-right-circle"></i> Get Started
                </a>
            </div>
        </div>
    </div>
</div>