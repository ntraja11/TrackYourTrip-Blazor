@page "/trip/details/{Id:int}"
@using TrackYourTrip.Data.Entities

@inject ITripRepository _tripRepository


@if (IsProcessing)
{
    <div class="loader">
        Loading trip...
    </div>
}
else
{
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-black bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Trip Details</h2>
                </div>
            </div>
        </div>
        <div class="card-body py-4">
            <div class="row pb-2">
                <div class="col-6 text-start mb-2">
                    <a href="trip/create" class="btn btn-lg btn-secondary" style="width:250px;">
                        <i class="bi bi-person-plus-fill"></i>
                        Add Participant
                    </a>
                </div>
                <div class="col-6 text-end mb-2">
                    <a href="trip" class="btn btn-lg btn-secondary" style="width:250px;">
                        <i class="bi bi-arrow-left-square"></i>
                        Back to Trip List
                    </a>
                </div>               
            </div>

            <table class="table table-bordered">
                <tr>
                    <th>Name</th>
                    <td>@Trip.Name</td>
                </tr>
                <tr>
                    <th>From</th>
                    <td>@Trip.From</td>
                </tr>
                <tr>
                    <th>To</th>
                    <td>@Trip.To</td>
                </tr>
                <tr>
                    <th>Start Date</th>
                    <td>@Trip.StartDate?.ToString("yyyy-MM-dd")</td>
                </tr>
                <tr>
                    <th>End Date</th>
                    <td>@Trip.EndDate?.ToString("yyyy-MM-dd")</td>
                </tr>
                <tr>
                    <th>Total Expense</th>
                    <td>@Trip.TotalExpense</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>@Trip.Status</td>
                </tr>
                <tr>
                    <th>Vehicle</th>
                    <td>@Trip.Vehicle!.Name</td>
                </tr>
            </table>

        </div>
    </div>
}



@code {

    private bool IsProcessing = true;
    [Parameter]
    public int Id { get; set; }

    private Trip Trip { get; set; } = new Trip();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadTrip();
            IsProcessing = false;
            StateHasChanged();
        }
    }

    private async Task LoadTrip()
    {
        if (Id > 0)
        {
            Trip = await _tripRepository.GetAsync(Id);
        }
    }

}
